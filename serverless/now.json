{
  "version": 2,
  "rewrites": [
    { "source": "/api/user/current", "destination": "/api/user" },
    { "source": "/api/user/(.*)", "destination": "/api/user" },
    { "source": "/api/segment/next", "destination": "/api/segment" }
  ],
  "env": {
    "MONGODB_URI": "@mongodb_uri",
    "DEV_MONGODB_URI": "@dev_mongodb_uri",
    "PRIVATE_KEY": "@private_key",
    "PUBLIC_KEY": "@public_key"
  }
}
