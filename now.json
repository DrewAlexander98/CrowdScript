{
  "version": 2,
  "env": {
    "MONGODB_URI": "@mongodb_uri",
    "DEV_MONGODB_URI": "@dev_mongodb_uri",
    "PRIVATE_KEY": "@private_key",
    "PUBLIC_KEY": "@public_key"
  },
  "builds": [
    { "src": "client/package.json", "use": "@now/static-build" },
    { "src": "api/*.js", "use": "@now/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1.js" },
    { "src": "/(.*)", "dest": "/client/$1" }
  ]
}
